<!DOCTYPE html>
<html lang="en">
<%- include head.ejs %>
<body>

<div class="container">
    <%- include header.ejs %>

    <form class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-sm-2" for="description">Omschrijving crisimelding</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description" rows="5" placeholder="Beschrijf de crisis" required></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="location">Locatie</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="location" placeholder="Typ het adres of de locatie van de crisis in" required>
            </div>
        </div>

        <div class="col-sm-offset-2 col-sm-10">
            <div class="well" id="map"><%= getLocation; %></div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox"> Ik bevestig dat dit een echte melding is</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Versturen</button>
            </div>
        </div>

    </form>

    <%- include footer.ejs %>

</div> <!-- /container -->
</body>
</html>